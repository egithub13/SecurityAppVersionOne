<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentCCTVSystem">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CCTV"
        android:id="@+id/textViewCCTV"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="318dp"
        android:textSize="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item to List: "
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/textViewCCTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:textSize="25dp"
        android:layout_marginBottom="121dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/textViewCCTV"
        android:layout_alignEnd="@+id/textViewCCTV"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new"
        android:id="@+id/button"
        android:layout_toEndOf="@+id/textView"
        android:layout_below="@+id/textViewCCTV"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginTop="45dp"/>


</RelativeLayout>
